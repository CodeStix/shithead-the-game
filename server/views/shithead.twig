{% extends "components/main.twig" %} 

{% block head %}
<script src="/js/phaser.min.js"></script>
<script src="/js/gameScene.js"></script>
<script src="/js/shitheadHandler.js"></script>
<link rel="stylesheet" href="/css/game.css" />
<!--<script src="/js/shake.js"></script>-->
{% endblock %} 

{% block body %}
<script>
    (() => {
        var gameObject = new ShitHeadHandler("{{playerName}}", true);
        config.scene.push(gameObject);
        new Phaser.Game(config);
        window.onbeforeunload = () => gameObject.server.close();
    })();
</script>
{% endblock %}
